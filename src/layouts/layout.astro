---
import Header from "../components/header";
import Footer from "../components/footer";
import { getImage } from "@astrojs/image";
import { AstroComponentInstance } from "astro/dist/runtime/server";
import { SEO } from "astro-seo";
const { page, title, description } = Astro.props;
---

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/icons/icon.png" type="image/x-icon" />
  <link
    rel="preload"
    href="/fonts/DMSans-Bold.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
  <link
    rel="preload"
    href="/fonts/DMSans-Medium.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
  <link
    rel="preload"
    href="/fonts/DMSans-Regular.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
  <SEO title={title} description={description} />
  <body>
    <main>
      <div class="full-grid">
        <Header client:load page={page} />
        <slot />
        <Footer />
      </div>
    </main>
  </body>
</head>
